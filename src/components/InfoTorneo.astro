---
const { torneo } = Astro.props;
var options = {
  weekday: "long",
  year: "numeric",
  month: "long",
  day: "numeric",
};
let bg = torneo.casinos.color;
console.log(torneo);
---

<div
  class="w-100 flex justify-between text-white bg-slate-500 p-5 items-center"
  style={{ backgroundColor: bg }}
>
  <div class="flex gap-10 items-center">
    <div class="casino">
      <a href={"/casino/" + torneo.casinos.id}
        ><img
          src={torneo.casinos.logo}
          title={torneo.casinos.name}
          width="80"
        />
      </a>
    </div>
    <div class="flex flex-col text-xs w-60">
      <div>
        {torneo.casinos.name}
      </div>
      <div>
        {new Date(torneo.date).toLocaleDateString("es-ES", options)}
      </div>
      <div>
        <strong>{torneo.hour}</strong>
      </div>
    </div>
    <div class="name">
      <a
        href={"/torneo/" + torneo.id}
        class="underline decoration-2 underline-offset-2"
        >{torneo.name}
      </a>
    </div>
  </div>
  <div class="prize font-bold">
    {torneo.prize}â‚¬
  </div>
</div>
