---
const { torneo, casino } = Astro.props;
let bg = torneo.casinos.color;
let date = new Date(torneo.date).toLocaleDateString("es-ES");
---

<div
  class="flex flex-col gap-4 lg:flex-row justify-between text-white bg-slate-500 p-5 items-center"
  style={{ backgroundColor: bg }}
>
  {
    casino && (
      <div class="block lg:hidden text-xs w-100">
        <a href={"/casino/" + torneo.casinos.id}>{torneo.casinos.name}</a>
      </div>
    )
  }
  <div class="flex lg:flex-col gap-2 text-xs w-100 lg:w-1/12">
    <strong>{date}</strong>
    <strong>{torneo.hour}</strong>
  </div>
  {
    casino && (
      <div class="hidden lg:block casino text-lg lg:text-xs w-100 lg:w-1/12">
        <a href={"/casino/" + torneo.casinos.id}>{torneo.casinos.name}</a>
      </div>
    )
  }
  <div class="name w-100 font-bold text-center lg:text-left lg:w-8/12">
    <a href={"/torneo/" + torneo.id} class="text-2xl lg:text-lg"
      >{torneo.name}
    </a>
  </div>
  <div
    class="prize font-bold text-3xl lg:text-xl w-100 lg:w-2/12 text-center lg:text-right"
  >
    {torneo.prize}â‚¬
  </div>
</div>
