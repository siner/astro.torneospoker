---
import Layout from "../../layouts/Layout.astro";
import CardCasino from "../../components/CardCasino.astro";
import RowTorneo from "../../components/RowTorneo.astro";
const id = Astro.params.id;
import { getCasino, getProximosTorneosCasino } from "../../lib/api";
let casino = await getCasino(id);
let torneos = await getProximosTorneosCasino(id);
---

<Layout title={casino.name}>
  <div class="container mx-auto">
    <div class="flex gap-4">
      <div class="lg:w-1/3 mt-6">
        <CardCasino casino={casino} />
      </div>
      <div class="lg:w-2/3">
        <h2 class="text-4xl font-bold py-4">Pr√≥ximos Torneos</h2>
        <div>
          {torneos.map((torneo) => <RowTorneo torneo={torneo} />)}
        </div>
      </div>
    </div>
  </div>
</Layout>
