---
import Layout from "../layouts/Layout.astro";
import RowTournament from "../components/tournament/RowTournament";
import LinkButton from "../components/elements/LinkButton";
import CardCasino from "../components/casino/CardCasino";
import { getProximosTorneosPaginated, getAllCasinos } from "../lib/api";

let torneos = await getProximosTorneosPaginated(0, 7);
let casinos = await getAllCasinos();
---

<Layout
  title="Torneos Poker"
  description="Información actualizada sobre torneos de Poker en España"
>
  <main class="mx-5">
    <h2 class="text-2xl font-bold py-4">Próximos Torneos</h2>
    <div class="space-y-0.5">
      {torneos.map((torneo) => <RowTournament torneo={torneo} casino="true" />)}
    </div>
    <div class="text-right mt-4">
      <LinkButton href="/torneos">Ver Todos</LinkButton>
    </div>

    <h2 class="text-2xl font-bold py-4">Casinos</h2>
    <div
      class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4"
    >
      {casinos.map((casino) => <CardCasino casino={casino} />)}
    </div>
  </main>
</Layout>
