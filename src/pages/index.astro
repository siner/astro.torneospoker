---
import Layout from "../layouts/Layout.astro";
import RowTorneo from "../components/RowTorneo.astro";
import CardCasino from "../components/CardCasino.astro";
import { getProximosTorneos, getAllCasinos } from "../lib/api";

let torneos = await getProximosTorneos();
let casinos = await getAllCasinos();
---

<Layout title="Torneos Poker">
  <main class="container mx-auto">
    <h2 class="text-2xl font-bold py-4">Pr√≥ximos Torneos</h2>
    <div>
      {torneos.map((torneo) => <RowTorneo torneo={torneo} casino="true" />)}
    </div>

    <h2 class="text-2xl font-bold py-4">Casinos</h2>
    <div class="grid grid-cols-3 gap-4">
      {casinos.map((casino) => <CardCasino casino={casino} />)}
    </div>
  </main>
</Layout>
