---
import Layout from "../../layouts/Layout.astro";
import CardCasino from "../../components/casino/CardCasino";
const id = Astro.params.id;
import { getTorneo } from "../../lib/api";
import { formatDate } from "../../lib/utils";
let torneo = await getTorneo(id);

import { getUser, isAdmin } from "../../lib/auth";
const user = await getUser(Astro.request);
let is_admin;
if (user) {
  is_admin = await isAdmin(user.id);
}

let { datestring, hour } = formatDate(torneo.date + " " + torneo.hour);
---

<Layout
  title={torneo.name}
  description={"Torneo de Poker " + torneo.name + " en " + torneo.casinos.name}
>
  <div class="lg:flex gap-4 space-y-4 lg:space-y-0 mx-10 mt-10">
    <div class="lg:w-8/12">
      <div class="rounded overflow-hidden shadow-lg">
        <div
          class="text-2xl font-bold flex justify-between items-center text-white bg-stone-500 p-5"
        >
          <div class="flex flex-col lg:flex-row items-left lg:items-center">
            {torneo.name}{
              torneo.image && (
                <img
                  width="100"
                  class="lg:ml-4"
                  src={torneo.image}
                  alt={"Icono " + torneo.name}
                />
              )
            }
          </div>
          {
            torneo.price && (
              <div class="text-4xl font-bold">{torneo.price}â‚¬</div>
            )
          }
        </div>
        <div class="p-5">
          <div class="font-bold">{datestring} - {hour}</div>
          <div class="mt-6">{torneo.description}</div>
        </div>
        {
          is_admin && (
            <div class="p-5 text-right space-x-2">
              <a
                class="bg-yellow-500 hover:bg-yellow-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
                href={"/admin/torneo/" + torneo.id}>
                Editar
              </a>
              <a
                class="bg-yellow-500 hover:bg-yellow-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
                href={"/admin/torneo/duplicate-" + torneo.id}>
                Duplicar
              </a>
            </div>
          )
        }
      </div>
    </div>
    <div class="lg:w-4/12">
      <CardCasino casino={torneo.casinos} />
    </div>
  </div>
</Layout>
