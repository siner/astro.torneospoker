---
import Layout from "../../../layouts/Layout.astro";
import CreateCasino from "../../../components/admin/CreateCasino";
import { getUser, isAdmin } from "../../../lib/auth";
const user = await getUser(Astro.request);
let is_admin;
if (user) {
  is_admin = await isAdmin(user.id);
}
if (!user || !is_admin) {
  return Astro.redirect("/login");
}
---

<Layout title="Crear Casino" description="Crear casino">
  <div class="lg:flex gap-4 space-y-4 lg:space-y-0 mx-10 mt-10">
    <div class="w-full">
      <CreateCasino client:load />
    </div>
  </div>
</Layout>
