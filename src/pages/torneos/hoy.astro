---
import Layout from "../../layouts/Layout.astro";
import RowTournament from "../../components/tournament/RowTournament";
import { getTodayText } from "../../lib/utils";
import { getTorneosDate } from "../../lib/api";

const hoy = getTodayText();
let torneos = await getTorneosDate(hoy);
---

<Layout title="Torneos Poker de hoy" description="Torneos de poker en vivo hoy">
  <main class="mx-5">
    <h2 class="text-2xl font-bold py-4">Torneos hoy</h2>
    <div class="space-y-1">
      {
        torneos.map((torneo) => (
          <RowTournament torneo={torneo} casino={true} event={true} />
        ))
      }
    </div>
  </main>
</Layout>
